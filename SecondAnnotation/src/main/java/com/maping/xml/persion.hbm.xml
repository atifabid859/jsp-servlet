<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC  
          "-//Hibernate/Hibernate Mapping DTD //EN"  
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
          
          <hibernate-mapping>
          <class name="com.maping.xml.Persion" table ="persion">
          <id name="id" column ="persion_id ">
          <generator class="native"></generator>
          </id>
          <property name="name" column ="persion_name" type ="string"/>
           <property name="address" column ="persion_address" type ="string"/>
            <property name="phone" column ="persion_phone" type ="string"/>
           </class>
              </hibernate-mapping>
          